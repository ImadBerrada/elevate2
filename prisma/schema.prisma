// Financial transactions for retreat operations
model RetreatFinancialTransaction {
  id              String                    @id @default(cuid())
  type            RetreatTransactionType
  category        RetreatTransactionCategory
  amount          Decimal                   @db.Decimal(10, 2)
  description     String
  transactionDate DateTime                  @default(now())
  
  // Related entities
  bookingId       String?
  facilityId      String?
  retreatId       String?
  vendorName      String?
  
  // Payment details
  paymentMethod   String?
  reference       String?                   // Invoice/receipt number
  taxAmount       Decimal?                  @db.Decimal(10, 2)
  
  // Categorization
  department      RetreatDepartment?
  tags            String[]
  
  // Approval workflow
  status          TransactionStatus         @default(PENDING)
  approvedBy      String?
  approvedAt      DateTime?
  
  createdAt       DateTime                  @default(now())
  updatedAt       DateTime                  @updatedAt

  // Relations
  booking         RetreatBooking?           @relation(fields: [bookingId], references: [id], onDelete: SetNull)
  facility        RetreatFacility?          @relation(fields: [facilityId], references: [id], onDelete: SetNull)
  retreat         Retreat?                  @relation(fields: [retreatId], references: [id], onDelete: SetNull)

  @@map("retreat_financial_transactions")
}

