// Simple budget model for the dashboard form
model BridgeRetreatBudget {
  id              String                    @id @default(cuid())
  category        String                    // Category name (can be custom)
  amount          Decimal                   @db.Decimal(10, 2)
  actual          Decimal                   @default(0) @db.Decimal(10, 2)
  description     String?
  period          BudgetPeriod              @default(MONTHLY)
  status          SimpleBudgetStatus        @default(ACTIVE)
  companyId       String                    @default("default")
  
